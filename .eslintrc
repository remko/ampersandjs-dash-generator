env:
  node: true
  es6: true

rules:
  quotes: [2, "single", "avoid-escape"]
  indent: [2, "tab", {indentSwitchCase: true}]
  brace-style: [2, "stroustrup", { "allowSingleLine": true }]
  consistent-this: [2, "self"]
  radix: 2
  no-throw-literal: 2

  no-extra-parens: 2
  no-trailing-spaces: 0
  space-infix-ops: 0
  space-unary-ops: 0
  comma-spacing: 0
  new-cap: 0
  no-empty: 0
  no-console: 0

  // ES6
  no-var: 2
